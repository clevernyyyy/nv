<div class="container">
  <div class="page-header">
    <h1 id="title">Welcome to <span class="greenFont">gSRSLY<sup>&copy;</sup></span> Demo</h1>
  </div>
  
  <div class="row">
    <div class="container col-md-6">
      <div class="login">
        <div id="fields" class="loginFields">
          <div id="usernameField">
            {{input class="inputField" type="text" value=username placeholder="Username" valueBinding="controllers.auth.username"}}
          </div>
          <div id="passwordField">
            {{input class="inputField" type="password" value=password placeholder="Password" valueBinding="controllers.auth.password"}}
          </div> 
        </div>
        <div id="loginButtons" class="loginButtons">
          <button title="btnLogin" value="Login" class="btnLogin" {{action 'checkLogin' this username password}}>Login</button>
        </div>
      </div>
      <div id="alert">
        <div id="loginError" class="alert alert-danger" style="margin-top:15px; display:none;">
          {{! <a href="#" class="close" data-dismiss="alert">&times;</a> }}
          <strong></strong>
        </div>
      </div>
    </div>
  </div>
</div>
